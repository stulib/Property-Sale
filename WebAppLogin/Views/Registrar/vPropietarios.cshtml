
@{
    ViewBag.Title = "vPropietarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Views/vPropietarios.js"></script>

<h3>Registrar Propietario</h3>

<div class="card border-secondary" style="margin-top: 50px;">

    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="bs-component">
                    <form id="frmPropietario">
                        @Html.CtrlInput(id: "txtTipoId", type: "text", label: "Tipo ID", columnDataName: "Tipo_Id")
                        @Html.CtrlInput(id: "txtId", type: "text", label: "Identificación", columnDataName: "Id")
                        @Html.CtrlInput(id: "txtNombre", type: "text", label: "Nombre", columnDataName: "Nombre")
                        @Html.CtrlInput(id: "txtApellido", type: "text", label: "Apellidos", columnDataName: "Apellidos")
                        @Html.CtrlInput(id: "txtCorreo", type: "email", label: "Correo", columnDataName: "Email")
                        @Html.CtrlInput(id: "txtTelefono", type: "tel", label: "Teléfono", columnDataName: "Telefono")
                        @Html.CtrlInput(id: "txtFechaNac", type: "date", label: "Fecha de nacimiento", columnDataName: "Fecha_Nac")
                        @Html.CtrlInput(id: "txtPwdP", type: "password", label: "Contraseña", columnDataName: "Contrasenna")
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="col-lg-6">
                @Html.CtrlButton(viewName: "vPropietarios", id: "mostrarPwdP", label: "Mostrar", onClickFunction: "ShowPwdP", buttonType: "info")
                @Html.CtrlButton(viewName: "vPropietarios", id: "ocultarPwdP", label: "Ocultar", onClickFunction: "HidePwdP", buttonType: "info")
            </div>
        </div>
    </div>
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-4">
                @Html.CtrlButton(viewName: "vPropietarios", id: "btnCreateP", label: "Guardar", onClickFunction: "CreateProp", buttonType: "success")
            </div>
        </div>
    </div>
</div>