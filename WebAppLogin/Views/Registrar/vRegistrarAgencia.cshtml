
@{
    ViewBag.Title = "vRegistrarAgencia";
}


@using WebApp.Helpers;
<script src="~/Scripts/Views/vRegistrarAgencia.js"></script>

<h3>Registrar Agencia</h3>

<div class="card border-secondary" style="margin-top: 50px;">

    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="bs-component">
                    <div>
                        <label>Tipo de Identificación</label>
                    </div>
                    <select name="Tipo_Id" id="tipo-id-Agencia">
                        <option value="">Seleccione uno</option>
                        <option value="Física">Física</option>
                        <option value="Jurídica">Jurídica</option>
                        <option value="DIMEX">DIMEX</option>
                        <option value="Pasaporte">Pasaporte</option>
                    </select>
                    <form id="frmEdition">
                        @Html.CtrlInput(id: "txtId", type: "text", label: "ID", columnDataName: "Id")
                        @Html.CtrlInput(id: "txtNombre", type: "text", label: "Nombre", columnDataName: "Nombre")
                        @Html.CtrlInputDisabled(id: "txtIdUser", type: "text", label: "ID del administrador", columnDataName: "Id_Usuario")
                        @Html.CtrlInput(id: "txtLogo", type: "text", label: "Logo", columnDataName: "Logo")
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-4">
                @Html.CtrlButton(viewName: "vRegistrarAgencia", id: "btnCreate", label: "Guardar", onClickFunction: "CreateAgencia", buttonType: "success")
            </div>
        </div>
    </div>
</div>